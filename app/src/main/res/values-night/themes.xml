<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChefBook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_orange_light</item>
        <item name="colorPrimaryVariant">@color/deep_orange_dark</item>
        <item name="colorAccent">@color/deep_orange_light</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/app_background</item>
        <!-- Background -->
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:navigationBarColor" tools:targetApi="p">@color/app_background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="p">true</item>
        <item name="fontFamily">@font/montserrat</item>

        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Theme.ChefBook.NavigationBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_orange_light</item>
        <item name="colorPrimaryVariant">@color/deep_orange_dark</item>
        <item name="colorAccent">@color/deep_orange_light</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/navigation_primary</item>
        <!-- Background -->
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:navigationBarColor" tools:targetApi="p">@color/navigation_primary</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="p">true</item>
        <item name="fontFamily">@font/montserrat</item>

        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>